@{  
    Layout = "/Shared/_Layout.cshtml"; 
    var PageTitle = "My Ajax Map";
}
 
@section scripts {
    <link rel="stylesheet" href="@Href("~/css/flick/jquery-ui-1.8.17.custom.css")" />
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript" src="@Href("~/js/jquery-1.7.1.min.js")"></script>
    <script type="text/javascript" src="@Href("~/js/clearmap.js")"></script>
    <script type="text/javascript" src="@Href("~/js/loadmarkers.js")"></script>
    
	<script type="text/javascript" src="@Href("~/js/jquery-ui-1.8.17.custom.min.js")"></script>
    <script type="text/javascript" src="@Href("~/js/jquery.ui.datepicker-ru.js")"></script>
	<script type="text/javascript">
	    $(function() {
		    $.datepicker.setDefaults( $.datepicker.regional[ "" ] );
            $( "#datepicker" ).datepicker( $.datepicker.regional[ "ru" ] );
	    });
	</script>
    <script type="text/javascript" src="@Href("~/js/datechange.js")"></script>
}

@section title { 
    @PageTitle 
} 

@section description {
    <h2>@PageTitle</h2>
    <div>Some description</div>
} 
<div class="col_66">
    <h3>Map content</h3>
    <div class="col_100" id="mapcontent"></div>
    <div id="map"></div>
</div>
<div class="col_33">
    <div id="datepicker"></div>
    <div id="loading"><img src="@Href("~/img/ajax-loader.png")" /></div>
</div>
<div class="col_66">
    <h3>List Markers</h3>
    <div>Current time: @DateTime.Now</div>
    <div id="list"></div>
</div>
    